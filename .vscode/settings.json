// Place your settings in this file to overwrite default and user settings.
{
    // Unofficially, QMK uses spaces for indentation
    "editor.insertSpaces": true,
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.build": true,
        "**/*.hex": true,
        "**/*.uf2": true,
        "keyboards/[!k]*": true,
        "keyboards/k[!e]*": true,
        "keyboards/ke[!y]*": true,
        "keyboards/key[!c]*": true,
        "keyboards/keyc[!h]*": true,
        "keyboards/keychron/[!cq]*": true,
        "keyboards/keychron/{c,q}[!o6]*": true,
        "keyboards/keychron/q65": true,
        "keyboards/keychron/q60": true,
        "keyboards/keychron/q6/ansi": true,
        "keyboards/keychron/q6/iso": true,
        "keyboards/keychron/q6/iso_encoder": true
    },
    "files.associations": {
        "*.cs": "csharp",
        "*.h": "c",
        "*.c": "c",
        "*.inc": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "xstddef": "c",
        "type_traits": "c",
        "utility": "c",
        "ranges": "c",
        "compare": "c",
        "cstdint": "c",
        "bitset": "c",
        "format": "c",
        "algorithm": "c",
        "*.ipp": "c",
        "chrono": "c",
        "typeindex": "c",
        "typeinfo": "c"
    },
    "[markdown]": {
        "editor.trimAutoWhitespace": false,
        "files.trimTrailingWhitespace": false
    },
    "python.formatting.provider": "yapf",
    "[json]": {
        "editor.formatOnSave": false
    },
    "clangd.arguments": [
        "--header-insertion=never"
    ]
}